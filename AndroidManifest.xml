<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="org.hicham.salaat" android:versionCode="29" android:versionName="1.2.6">
	<uses-sdk android:minSdkVersion="5" />
	<uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"></uses-permission>
	<uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED">
	</uses-permission>
	<uses-feature android:required="false" android:name="android.hardware.location" />
	<uses-feature android:required="false"
		android:name="android.hardware.location.gps" />
	<application android:label="@string/app_name" android:icon="@drawable/icon">
		<activity android:name="PrayerTimesActivity"
			android:configChanges="locale" android:screenOrientation="portrait">
		</activity>
		<activity android:screenOrientation="portrait" android:name=".settings.Settings"
			android:configChanges="locale"></activity>
		<activity android:name=".settings.CitySettings"
			android:screenOrientation="portrait" android:configChanges="locale"></activity>
		<service android:name="WidgetService"></service>
		<activity android:configChanges="locale" android:name="AdhanActivity"
			android:screenOrientation="portrait"></activity>
		<activity android:configChanges="locale"
			android:screenOrientation="portrait" android:name=".settings.PrayerSettingsScreen"></activity>
		<activity android:configChanges="locale"
			android:screenOrientation="portrait" android:name=".settings.PrayerSettings"></activity>
		<receiver android:name="StartAtBootServiceReceiver">
			<intent-filter>
				<action android:name="android.intent.action.BOOT_COMPLETED">
				</action>
				<category android:name="android.intent.category.HOME">
				</category>
			</intent-filter>
		</receiver>
		<receiver android:name=".widget.PrayerAppWidgetProvider">
			<intent-filter>
				<action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
			</intent-filter>
			<meta-data android:name="android.appwidget.provider"
				android:resource="@xml/appwidget_info" />
		</receiver>
		<activity android:name="AboutActivity" android:configChanges="locale"
			android:screenOrientation="portrait"></activity>
		<receiver android:name="org.hicham.alarm.AlarmReceiver"></receiver>
		<activity android:configChanges="locale" android:name=".settings.Wizard"></activity>
		<activity android:screenOrientation="portrait"
			android:configChanges="locale" android:name="MainActivity">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
		<activity android:screenOrientation="portrait" android:name="com.farsitel.qiblacompass.activities.QiblaActivity"></activity>
		<activity android:configChanges="locale" android:name=".settings.CompassSettings" android:screenOrientation="portrait"></activity>
		<activity android:configChanges="locale" android:screenOrientation="portrait" android:name=".settings.AdhanSettingsActivity"></activity>
	</application>
</manifest>